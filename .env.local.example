# Copy this file to .env.local and fill in your keys

# ─── Paystack ────────────────────────────────────────────────
# Get your keys at https://dashboard.paystack.com/#/settings/developers
PAYSTACK_SECRET_KEY=sk_live_...
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_live_...

# Currency for Paystack transactions
PAYSTACK_CURRENCY=NGN

# ─── Supabase ────────────────────────────────────────────────
# Get these from: Supabase Dashboard → Project Settings → API
# IMPORTANT: use the service_role key (not anon) — server-only!
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ─── Resend ──────────────────────────────────────────────────
# Get your key at https://resend.com/api-keys
# Also verify your sending domain: Resend Dashboard → Domains → Add theokiddies.com
RESEND_API_KEY=re_...
RESEND_FROM_ADDRESS=Theo Kiddies <orders@theokiddies.com>

# ─── Clerk ───────────────────────────────────────────────────
# Get your keys at https://dashboard.clerk.com → Your app → API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_...
CLERK_SECRET_KEY=sk_live_...
# Where Clerk redirects after sign-in/sign-up
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/admin
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/admin

# ─── Store Contact Info ──────────────────────────────────────
# Shown in the footer and used across the site
# Use international format for WhatsApp e.g. 2348012345678 (no + or spaces)
NEXT_PUBLIC_WHATSAPP_NUMBER=2348140688891
NEXT_PUBLIC_STORE_PHONE=+234 814 068 8891
NEXT_PUBLIC_STORE_EMAIL=hello@theokiddies.com

# ─── Social Media ────────────────────────────────────────────
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/theokiddies
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/theokiddies
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/theokiddies

# ─── App ─────────────────────────────────────────────────────
# Your live Vercel deployment URL (no trailing slash)
NEXT_PUBLIC_URL=https://theokiddies.com

# Admin credentials (legacy — now replaced by Clerk)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme
